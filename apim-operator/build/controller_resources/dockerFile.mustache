#This image will be used by Kaniko pod to create the micro-gw image

# Custom image with java and toolkit has been build for stage1
FROM wso2am/wso2micro-gw-toolkit:3.0.0-beta2 as toolkit

#init the micro-gw project
RUN micro-gw init project

#copy swagger definitions to the project location
RUN cp /usr/wso2/swagger/* ./project/api_definitions/
RUN cp /usr/wso2/policy/* ./project/

#generate the executable
RUN micro-gw build project

#copy the executable to the home/exec location
RUN mkdir -p /home/exec

RUN cp ./project/target/* /home/exec/

#Stage 2: Generate balx will be passed to the micro-gw runtime
FROM wso2/wso2micro-gw:3.0.0-beta2

#change permission to create and copy the executable
USER root
RUN  mkdir -p /home/exec
COPY --from=toolkit /home/exec /home/exec

RUN mkdir -p /home/testing
RUN cp /usr/wso2/mgwconf/* /home/testing
RUN ls /home/testing

RUN ls /home/ballerina/conf

RUN cp /usr/wso2/mgwconf/* /home/ballerina/conf

RUN ls /home/ballerina/conf

RUN cat /home/ballerina/conf/micro-gw.conf

#RUN echo yes | keytool -import  -storepass {{password}} -keystore /ballerina/runtime/bre/security/ballerinaTruststore.p12 -alias "{{alias}}" -file {{certPath}}

RUN echo yes | keytool -import  -storepass {{password}} -keystore /ballerina/runtime/bre/security/ballerinaTruststore.p12 -alias "wso2am260" -file /usr/wso2/wso2am/wso2am260.pem
RUN echo yes | keytool -import  -storepass {{password}} -keystore /ballerina/runtime/bre/security/ballerinaTruststore.p12 -alias "wso2analytics260" -file /usr/wso2/wso2analytics/wso2analytics260.pem

#RUN keytool -list -storepass ballerina -v -keystore /ballerina/runtime/bre/security/ballerinaTruststore.p12

#RUN setfacl -m u:ballerina:rwx /home/ballerina

#RUN chown ballerina: /home/ballerina
RUN chmod a+w /home/ballerina

USER ballerina
#project name has to be passed to the ballerina image as a env variable
ENV project="project"